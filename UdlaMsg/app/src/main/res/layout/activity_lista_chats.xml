<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView_fotoperfilchat"
                android:src="@drawable/logo" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1.02" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Alejandro Garcia Rodriguez"
                android:id="@+id/textView_nombre"
                android:textSize="16dp"
                android:textColor="#ff000000"
                android:layout_alignParentTop="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ultimo mensaje"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="15dp"
                android:textColor="#ff000000"
                android:id="@+id/textView_Ultimomens"
                android:layout_below="@+id/textView_nombre"
                android:layout_alignParentStart="false"
                android:textStyle="normal"
                android:layout_alignEnd="@+id/textView_nombre" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10:00am"
                android:textSize="15dp"
                android:id="@+id/textView_horamens"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_alignTop="@+id/textView_Ultimomens"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="vertical" >

    </LinearLayout>
</LinearLayout>